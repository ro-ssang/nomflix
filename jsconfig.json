{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@assets": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
